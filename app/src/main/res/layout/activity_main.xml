<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.gauravk.bubblenavigation.BubbleNavigationConstraintView
        android:id="@+id/bottom_navigation_view_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="8dp"
        android:padding="10dp"
        app:bnc_mode="spread"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/c_item_rest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bt_active="true"
            app:bt_colorActive="#FFFFFF"
            app:bt_colorInactive="@color/tab_indicator_gray"
            app:bt_icon="@drawable/ic_home_outline_28"
            app:bt_padding="12dp"
            app:bt_shape="@drawable/transition_background_drawable_default"
            app:bt_title="@string/Home"
            app:bt_titlePadding="8dp"
            />

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/c_item_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bt_colorActive="#FFFFFF"
            app:bt_colorInactive="@color/tab_indicator_gray"
            app:bt_icon="@drawable/ic_services_outline_28"
            app:bt_padding="12dp"
            app:bt_shape="@drawable/transition_background_drawable_default"
            app:bt_title="@string/Services"
            app:bt_titlePadding="8dp" />

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/c_item_happy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bt_colorActive="#FFFFFF"
            app:bt_colorInactive="@color/tab_indicator_gray"
            app:bt_icon="@drawable/ic_settings_outline_28"
            app:bt_padding="12dp"
            app:bt_shape="@drawable/transition_background_drawable_default"
            app:bt_title="@string/Settings"
            app:bt_titlePadding="8dp" />


    </com.gauravk.bubblenavigation.BubbleNavigationConstraintView>

</androidx.constraintlayout.widget.ConstraintLayout>